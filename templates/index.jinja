{% extends "base.jinja" %}

{% block content %}
    <h1>Upcoming Events!</h1>
{# add form here #}
<form action='/events',method=post>
<div>
      <label for="event_name">Event Name:</label>
      <input type="text" name="event_name" id="event_name">  
   
    <label for="description">Description:</label>
      <textarea name="description" id="description" rows="2" cols="20"></textarea>
     
      <label for="date" placeholder="YYYY/MM/DD">Event Date:</label>
      <input type="date" id="date" name="date" min="2023-01-01" max="2030-12-31"><br>
     
      <label for="guest_number">Guest Number:</label> 
      <input type="number" name="guest_number" id="guest_number" min=0 max=400>
      
      <label for="room">Room:</label>
      <input type="text" name="room" id="room">
    
      <label for="recurring">
      <input type="checkbox" name="recurring" value="true"> Recurring </label><br>
  {# <label>
    <input type="checkbox" name="my_property" value="false">
    False
  </label> #}
     <label for="submit"></label>
     <input type="submit" name="add_task" value="Add Task">
     </div>
</form>

    {% for event in events %}

    <div class="event">
      <h2>{{event.name }}</h2>
      <h3>{{event.description }}</h3>
      <h5>Date:{{event.date}}</h5>
      <h5>Guests: {{ event.guests }}</h5>
      <h5>Room: {{ event.room_location }}</h5>
          {% if event.recurring %}
          <p><i>Recurring </i></p>
          {% endif %}     
    </div>
    
    {% endfor %}
{% endblock %}
